extends layout 
 
block content 
  div(class='container', style='width: 450px; padding:10px;background-color:  #c8ff00; ')
    h1(style="text-align: center; color: #0542D8; font-weight: bold")= title 
    br
    br
    div(class='container' style="text-align: center; width: 450px;")
      form(id='TreeForm', action="/resource/tree", method="POST") 
        div.form-group 
          label.treeAttr(for='tree_name') Tree Name 
          div(style='color: #0542D8;')
            input#tree_name(type='text', name='tree_name') 
        div.form-group 
          label.treeAttr(for='size') Tree size 
          div(style='color: #0542D8;')
            input#size(type='text', name='size') 
        div.form-group 
          label.treeAttr(for='age') Tree Age 
          div(style='color: #0542D8;')
            input#age(type='number', name='age')
        br
        input(type="submit") 
 
  script. 
    document.forms['TreeForm'].addEventListener('submit', (event) => { 
      event.preventDefault(); 
      // TODO do something here to show user that form is being submitted 
      fetch(event.target.action, { 
        method: 'POST', 
        body: new URLSearchParams(new FormData(event.target)) // event.target is the form 
      }).then((resp) => { 
        return resp.json(); // or resp.text() or whatever the server sends 
      }).then((body) => { 
        alert("Save succeded") 
        // TODO handle body 
      }).catch((error) => { 
        // TODO handle error 
        alert("Save failed " + error ) 
      }); 
    }); 