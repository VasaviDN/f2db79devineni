extends layout 
 
block content 
  h1= title 
 
  if (toShow == null) 
    h2 No instance to delete 
  else 
    - let treeid = toShow._id 
    - let tree_name = toShow.tree_name 
    - let treesize = toShow.size 
    - let treeage = toShow.age 
    - let actionid = "/resource/trees/" + treeid 
    script let actionid = "#{actionid}" 
    div 
      div.row 
        div(class='treeAttr mr-3') Tree ID is: 
        div #{treeid} 
      div.row 
        div(class='treeAttr mr-3') Tree Name is: 
        div #{tree_name} 
      div.row 
        div(class='treeAttr mr-3') Tree Size is: 
        div #{treesize} 
      div.row 
        div(class='treeAttr mr-3') Tree Age is: 
        div #{treeage} 
 
    button(class="btn btn-danger m-2" onclick="deleteOnid()") Delete 
    button(class="btn btn-secondary m-2" onclick="cancel()") Cancel 
 
  script. 
    function cancel() { 
      // Go back to the home page for the costume collection 
      window.location.href='/trees' 
    } 
  script. 
    function deleteOnid() { 
      console.log("starting delete") 
      // delete first 
      // Don't need a body for the delete
      fetch(actionid, { 
        method: 'DELETE'      
      }).then((resp) => { 
        return resp.text(); // or resp.text() or whatever the server sends 
      }).then((body) => { 
        alert("Delete succeded") 
        window.location.href='/trees' 
        // TODO handle body 
      }).catch((error) => { 
        // TODO handle error 
        alert("Delete failed " + error ) 
      }); 
    } 